html
    head
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
        title List of users
    body
        div.form-row
            div.col.form-group.col-md-9    
                form.search(action='/userlist')
                    div.form-row
                        div.col-md-8
                            input.form-control(name='firstName' placeholder="Enter your search term ...")
                        div.col-md-4
                            input.btn.btn-dark.btn-block(type="submit")
        table.table
            thead.thead-dark
                tr
                    th First name
                    th Last name
                    th Nick name
                    th Location
                tbody
                    //- this how you create a loop in PUG
                    each user in users
                        tr
                            td #{user.firstName}
                            td #{user.lastName}
                            td #{user.nickName}
                            td #{user.location}